<link rel="stylesheet" href="assets/checkout.css">

<div class="container mt-5 px-5">
  <div class="mb-4">
    <h2>Confirm order and pay</h2>
    <span
      >please make the payment, after that you can enjoy all the features and
      benefits.</span
    >
  </div>

  <form action="/checkouts" method="POST">
    <div class="row">
      <div class="col-md-8">
        <div class="card p-3">
          <h6 class="text-uppercase">User information</h6>
          <div class="inputbox mt-3">
            <input
              type="text"
              name="address"
              class="form-control"
              required="required"
            />

            <input
              type="text"
              name="price"
              class="form-control"
              required="required"
              value="549"
              hidden
            />
            <input
              type="text"
              name="size"
              class="form-control"
              required="required"
              value="xl"
              hidden
            /><input
              type="text"
              name="amount"
              class="form-control"
              required="required"
              value="2"
              hidden
            />
            <input
              type="text"
              name="color"
              class="form-control"
              required="required"
              value="red"
              hidden
            />
            <input
              type="text"
              name="product_id"
              class="form-control"
              required="required"
              value="7"
              hidden
            />
            <span>Your address</span>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="inputbox mt-3 mr-2">
                <input
                  type="text"
                  name="name"
                  class="form-control"
                  required="required"
                />
                <span>Your name</span>
              </div>
            </div>
            <div class="col-md-6">
              <div class="inputbox mt-3 mr-2">
                <input
                  type="text"
                  name="phone"
                  class="form-control"
                  required="required"
                />
                <span>Your Phone</span>
              </div>
            </div>
          </div>
          <div class="mt-4 mb-4">
            <h6 class="text-uppercase">Billing Address</h6>

            <div class="row mt-3">
              <div class="col-md-6">
                <div class="inputbox mt-3 mr-2">
                  <input
                    type="text"
                    name="city"
                    class="form-control"
                    required="required"
                  />
                  <span>City</span>
                </div>
              </div>
              <div class="col-md-6">
                <div class="inputbox mt-3 mr-2">
                  <input
                    type="text"
                    name="ward"
                    class="form-control"
                    required="required"
                  />
                  <span>Ward</span>
                </div>
              </div>
            </div>
            <div class="row mt-2">
              <div class="col-md-6">
                <div class="inputbox mt-3 mr-2">
                  <input
                    type="text"
                    name="discict"
                    class="form-control"
                    required="required"
                  />
                  <span>State/Province</span>
                </div>
              </div>
            </div>
          </div>

          <div class="mt-4 mb-4">
            <h6 class="text-uppercase">Payment method</h6>

            <div class="row mt-3">
              <div class="col-md-6">
                <div class="inputbox mt-3 mr-2">
                  <select
                    id="product_category"
                    name="payment"
                    class="form-control"
                    selected="PRODUCT CATEGORY">

                    <option value="1">MOMO</option>
                    <option value="2">COD</option>
                    <option value="3">INTERNET BANIKING</option>
                  </select>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="mt-4 mb-4 d-flex justify-content-between">
          <button class="btn btn-success px-3 btn-lg" type="submit">Pay $840</button>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card card-blue p-3 text-white mb-3">
          <span>You have to pay</span>
          <div class="d-flex flex-row align-items-end mb-3">
            <h1 class="mb-0 yellow">$549</h1>
            <span>.99</span>
          </div>

          <span
            >Enjoy all the features and perk after you complete the payment</span
          >
          <a href="#" class="yellow decoration">Know all the features</a>

          <div class="hightlight">
            <span>100% Guaranteed support and update for the next 5 years.</span>
          </div>
        </div>
      </div>
    </div>
  </form>

  <% if (locals.message) { %>
    <div class="alert alert-primary" role="alert">
        <%= locals.message %>
    </div>
  <% } %>
</div>
</div>
