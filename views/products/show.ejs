<script>
  $(() => {
    $(".js-add_to_cart").click(function() {
      const product_id = $(this).val();
      const size = $('#product_size').find(":selected").val();
      const color = $('#product_color').find(":selected").val();
      const amount = $("#product_amount").val();

      $.ajax({
        type: "POST",
        url: "/ajax/add_to_cart",
        data: { product_id: product_id, size: size, color: color, amount: amount },
        success: function(data) {
        },
        error: function(data) {
        }
    })


    })
  })
</script>