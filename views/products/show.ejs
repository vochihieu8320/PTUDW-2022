<div class="container">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Rounded Chair</h3>
            <h6 class="card-subtitle">globe type chair for rest</h6>
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="white-box text-center">
                        <img src="<%= product.product_images[0].image %>" class="img-responsive w-100">
                    </div>

                    <div class="row">
                      <% product.product_images.forEach(product => { %>
                        <div class="col-md-4 white-box text-center">
                          <img src="<%= product.image %>" class="img-responsive w-100">
                        </div>
                      <% }) %>
                    </div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5"><%= product.name %></h4>
                    <p><%= product.description %></p>
                    <h2 class="mt-5">
                        <%= product.price %> VND
                    </h2>

                    <span class="mt-5 d-block">
                      COLOR:
                        <select
                        id="product_color"
                        name="color"
                        class="form-control"

                        <% product.product_images.forEach(product => { %>
                          <option value="<%= product.name %>"><%= product.name %></option>
                        <% }) %>
                      </select>
                    </span>

                    <span class="mt-5 d-block">
                      SIZE:
                        <select
                        id="product_size"
                        name="size"
                        class="form-control"

                        <% product_size = product.available_size.split(",") %>

                        <% for(let i = 0; i  < product_size.length; i++) { %>
                          <option value="<%= product_size[i] %>"><%= product_size[i] %></option>
                        <% } %>

                      </select>
                    </span>

                    <input
                    type="text"
                    class="form-control bg-light border-0 small mt-5"
                    placeholder="Amount"
                    id="product_amount"
                    aria-label="Search"
                    aria-describedby="basic-addon2"
                  />
                    <a href="/checkouts">
                        <button class="btn btn-primary btn-rounded mt-5">Buy Now</button>
                    </a>
                    
                    <button class="btn btn-primary btn-rounded mt-5 js-add_to_cart" value="<%= product.id %>">Add to cart</button>

                    <h3 class="box-title mt-5">Key Highlights</h3>
                    <ul class="list-unstyled">
                        <li><i class="fa fa-check text-success"></i>Sturdy structure</li>
                        <li><i class="fa fa-check text-success"></i>Designed to foster easy portability</li>
                        <li><i class="fa fa-check text-success"></i>Perfect furniture to flaunt your wonderful collectibles</li>
                    </ul>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-5">General Info</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-product">
                            <tbody>
                                <tr>
                                    <td width="390">Brand</td>
                                    <td>Stellar</td>
                                </tr>
                                <tr>
                                    <td>Delivery Condition</td>
                                    <td>Knock Down</td>
                                </tr>
                                <tr>
                                    <td>Seat Lock Included</td>
                                    <td>Yes</td>
                                </tr>
                                <tr>
                                    <td>Type</td>
                                    <td>Office Chair</td>
                                </tr>
                                <tr>
                                    <td>Style</td>
                                    <td>Contemporary&amp;Modern</td>
                                </tr>
                                <tr>
                                    <td>Wheels Included</td>
                                    <td>Yes</td>
                                </tr>
                                <tr>
                                    <td>Upholstery Included</td>
                                    <td>Yes</td>
                                </tr>
                                <tr>
                                    <td>Upholstery Type</td>
                                    <td>Cushion</td>
                                </tr>
                                <tr>
                                    <td>Head Support</td>
                                    <td>No</td>
                                </tr>
                                <tr>
                                    <td>Suitable For</td>
                                    <td>Study&amp;Home Office</td>
                                </tr>
                                <tr>
                                    <td>Adjustable Height</td>
                                    <td>Yes</td>
                                </tr>
                                <tr>
                                    <td>Model Number</td>
                                    <td>F01020701-00HT744A06</td>
                                </tr>
                                <tr>
                                    <td>Armrest Included</td>
                                    <td>Yes</td>
                                </tr>
                                <tr>
                                    <td>Care Instructions</td>
                                    <td>Handle With Care,Keep In Dry Place,Do Not Apply Any Chemical For Cleaning.</td>
                                </tr>
                                <tr>
                                    <td>Finish Type</td>
                                    <td>Matte</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="products">
            <div class="container">
              <div class="row">
                <div class="col-md-12">
                  <div class="filters">
                    <ul>
                        <li class="active" data-filter="*">Related products</li>
                    </ul>
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="filters-content">
                      <div class="row grid">
                        <% related_products.forEach(function(related_product) { %>
                            <div class="col-lg-4 col-md-4 all des">
                                <div class="product-item">
                                  <a href="/products/<%= related_product.id %>"><img src="<%= related_product.product_images[0].image %>" alt=""></a>
                                  <div class="down-content">
                                    <a href="#"><h4><%= related_product.name %></h4></a>
                                    <h6><%= related_product.price %> VND</h6>
                                    <p><%= related_product.description %></p>
                                    <ul class="stars">
                                      <li><i class="fa fa-star"></i></li>
                                      <li><i class="fa fa-star"></i></li>
                                      <li><i class="fa fa-star"></i></li>
                                      <li><i class="fa fa-star"></i></li>
                                      <li><i class="fa fa-star"></i></li>
                                    </ul>
                                    <span>Reviews (12)</span>
                                  </div>
                                </div>
                            </div>
                        <% }) %>
                      </div>
                  </div>
                </div>
                <div class="col-md-12">
                  <ul class="pages">
                    <li><a href="#">1</a></li>
                    <li class="active"><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#"><i class="fa fa-angle-double-right"></i></a></li>
                  </ul>
                </div>
              </div>
            </div>
        </div>
    </div>
</div>

