<div id="content">
  <!-- Begin Page Content -->
  <div class="container-fluid">
    <div class="card shadow mb-4 mt-5">
      <div class="card-header py-3">
        <h5>Create Category</h5>
      </div>
      <form class="form-horizontal mt-3" action="/admin/categories" method="post">
        <!-- Text input-->
        <div class="form-group" id="category">
          <div class="col-md-4 d-flex">
            <input
              id="category_name"
              name="category_name"
              placeholder="CATEGORY NAME"
              class="form-control input-md"
              type="text"
            />

            <button
              id="child_category"
              name="child_category"
              class="btn btn-primary ml-2"
              type="button"
            >
              Add child category
            </button>
          </div>
        </div>

        <!-- Button -->
        <div class="form-group">
          <div class="col-md-4">
            <button
              id="singlebutton"
              class="btn btn-primary"
              type="submit"
            >
              Save
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

<script>
  $(()=>{
    $("#child_category").click(function(){
      let html = `
        <div class="col-md-4 d-flex mt-5">
          <input
            name="child_category_name"
            placeholder="CATEGORY NAME"
            class="form-control input-md"
            type="text"
          />

          <button
            name="delete_category"
            class="btn btn-primary ml-2 delete_category"
            type="button"
          >
            Delete
          </button>
        </div>`

      $("#category").append(html);
    })

    $(document).on("click", "[class*='delete_category']", function() {
      $(this).parent().remove();
    } );
  })
</script>
